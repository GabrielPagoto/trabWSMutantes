<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.trabwsmutantes">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrabWSMutantes"
        tools:targetApi="31">
        <activity
            android:name=".Controller.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.PesquisarActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.EditarMutanteActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.DetalheMutanteActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.ListarTodosActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.DashboardActivity"
            android:exported="false"
            android:label="Dashboard" />
        <activity
            android:name=".Controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>